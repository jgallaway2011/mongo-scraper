{{#if dbArticle}}
<div class="container-fluid">
    <div class="row justify-content-center">
        {{#each dbArticle}}
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src={{this.image}} alt="Article Image">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.summary}}</p>
                    <a href="{{this.link}}" target="_blank" class="btn btn-primary">Read</a>
                    <button type="button" class="btn btn-primary unsave-articles" data-id={{this._id}}>Unsave</button>
                    <button type="button" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}
                        class="btn btn-primary note-articles">Note</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
{{else}}
<div class="container">
    <div class="row justify-content-center">
        <div class="alert alert-warning text-center">
            <h4>Uh Oh. Looks like we don't have any saved articles.</h4>
        </div>
    </div>
    <div class="row justify-content-center">
        <h4>
            <a class="btn btn-primary" href="/scrapedArticles">Browse Articles</a>
        </h4>
    </div>
</div>
{{/if}}

{{#each dbArticle}}
<!-- Modal -->
<div class="modal" id="noteModal{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="noteModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="noteModal">Notes for: {{this.title}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul id="note-ul-{{this.id}}">
                </ul>
                <form>
                    <div class="form-group">
                        <label for="noteFormControlTextarea">Add New Note</label>
                        <textarea class="form-control" id="noteFormControlTextarea{{this.id}}" rows="2"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary note-save" data-id={{this._id}}>Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
{{/each}}